@model GeoRelationsSample.Models.Continent

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Continent</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <h4>Alle Länder</h4>
    @foreach (Country currentCountry in Model.Countries)
    {
        <p>@currentCountry.Name</p>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
